{
  "apps": [{
    "name"  : "keycode",
    "script": "src/prod.js",
    "env_production": {
      NODE_ENV: "production",
      PORT: 5163,
    },
  }],
  "deploy": {
    "production": {
      "user"       : "pm2",
      "host"       : "sigsev.io",
      "ref"        : "origin/master",
      "repo"       : "git@github.com:SIGSEV/KeyCode.git",
      "path"       : "/var/www/keycode",
      "post-deploy": "yarn && yarn build && pm2 startOrRestart ecosystem.json5 --env production --log-date-format 'DD-MM HH:mm:ss.SSS'",
    }
  }
}
